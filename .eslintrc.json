{
  "env": {
    "browser": true,
    "amd": true,
    "node": true,
    "es2021": true,
    "jest": true,
    "cypress/globals": true
  },
  "extends": "eslint:recommended",
  "overrides": [
    {
      "files": ["**/*.cy.js", "cypress/**"],
      "env": { "cypress/globals": true },
      "plugins": ["cypress"],
      "extends": ["plugin:cypress/recommended"],
      "rules": {
        "cypress/no-unnecessary-waiting": "off",
        "no-unused-vars": "off"
      }
    },
    {
      "files": ["**/*.test.js", "**/*.spec.jsx"],
      "env": { "jest": true },
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended"],
      "rules": { "jest/prefer-expect-assertions": "off" }
    },
    {
      "files": ["cypress.config.js", "cypress/**"],
      "env": { "node": true },
      "parserOptions": {
        "sourceType": "script"
      },
      "globals": {
        "require": "readonly",
        "module": "readonly"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {}
}
